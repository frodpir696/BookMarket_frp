{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <h1>Pedidos</h1>
    <a href="{{ path('app_pedido_new') }}">Nuevo pedido</a>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
            <th>Comprador</th>
            <th>Libros</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.fecha|date('Y-m-d H:i') }}</td>
                <td>{{ pedido.estado }}</td>
                <td>{{ pedido.total }} â‚¬</td>
                <td>{{ pedido.comprador.email }}</td>
                <td>
                    {% for book in pedido.books %}
                        {{ book.titulo }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_pedido_show', {'id': pedido.id}) }}">Ver</a>
                    <a href="{{ path('app_pedido_edit', {'id': pedido.id}) }}">Editar</a>
                    <form method="post" action="{{ path('app_pedido_delete', {'id': pedido.id}) }}" style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ pedido.id) }}">
                        <button type="submit">Borrar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="7">No hay pedidos</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends 'base.html.twig' %}
{% block body %}
{# Vista simple para listar pedidos del usuario autenticado #}
<h1>Mis pedidos</h1>
<a class="btn btn-primary mb-2" href="{{ path('app_pedido_new') }}">Nuevo pedido</a>
<table class="table">
    <thead><tr><th>ID</th><th>Fecha</th><th>Total</th><th>Estado</th></tr></thead>
    <tbody>
    {% for pedido in pedidos %}
        <tr>
            <td>{{ pedido.id }}</td>
            <td>{{ pedido.fecha|date('d/m/Y H:i') }}</td>
            <td>{{ pedido.total }}</td>
            <td>{{ pedido.estado }}</td>
        </tr>
    {% else %}
        <tr><td colspan="4">No hay pedidos todav√≠a.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}

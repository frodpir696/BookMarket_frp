{# Plantilla base reutilizable para toda la aplicación #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}BookMarket{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
        <a class="navbar-brand" href="{{ path('home') }}">BookMarket</a>
        <div>
            <a class="btn btn-sm btn-outline-light" href="{{ path('app_book_index') }}">Libros</a>
            <a class="btn btn-sm btn-outline-light" href="{{ path('app_categoria_index') }}">Categorías</a>
            {% if app.user %}
                <a class="btn btn-sm btn-outline-info" href="{{ path('app_carrito_index') }}">Carrito</a>
                <form class="d-inline" method="post" action="{{ path('app_logout') }}">
                    <button class="btn btn-sm btn-warning">Salir</button>
                </form>
            {% else %}
                <a class="btn btn-sm btn-success" href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </div>
    </div>
</nav>

<div class="container">
    {# Bloque único para mostrar flashes de éxito/error #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
</div>
</body>
</html>

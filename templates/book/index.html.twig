{% extends 'base.html.twig' %}

{% block title %}Libros{% endblock %}

{% block body %}
    <h1>Libros</h1>
    <a href="{{ path('app_book_new') }}">Crear nuevo libro</a>

    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Autor</th>
            <th>Categoria</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.titulo }}</td>
                <td>{{ book.autor }}</td>
                <td>{{ book.categoria }}</td>
                <td>{{ book.precio }} €</td>
                <td>{{ book.estado }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'id': book.id}) }}">Ver</a>
                    <a href="{{ path('app_book_edit', {'id': book.id}) }}">Editar</a>
                    <form method="post" action="{{ path('app_book_delete', {'id': book.id}) }}" style="display:inline-block">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <button type="submit">Borrar</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="7">No hay libros</td></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

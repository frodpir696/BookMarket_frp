{% extends 'base.html.twig' %}
{% block body %}
<h1>{{ categoria.nombre }}</h1>
<p>{{ categoria.descripcion }}</p>

<h2 class="mt-4">Libros de esta categoría</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Título</th>
        <th>Autor</th>
        <th>Precio</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {% for book in books %}
        <tr>
            <td>{{ book.titulo }}</td>
            <td>{{ book.autor }}</td>
            <td>{{ book.precio }} €</td>
            <td>
                <a href="{{ path('app_book_show', {'id': book.id}) }}">Ver</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">No hay libros publicados en esta categoría.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_categoria_index') }}">Volver</a>
{% endblock %}

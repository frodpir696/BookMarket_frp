{% extends 'base.html.twig' %}

{% block body %}
    <h1>Iniciar sesión</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form method="post">
        {# CSRF token correcto #}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="mb-2">
            <label for="email">Email</label>
            <input id="email" class="form-control" name="_username" type="email" value="{{ last_username }}" required autofocus>
        </div>

        <div class="mb-2">
            <label for="password">Contraseña</label>
            <input id="password" class="form-control" name="_password" type="password" required>
        </div>

        <button class="btn btn-primary">Entrar</button>
        <a class="btn btn-link" href="{{ path('app_register') }}">Registrarse</a>
    </form>
{% endblock %}

